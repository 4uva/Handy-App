<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HandyApp.Views.UARTControlView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding DeviceName}"
    Visual="Material">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label Text="Enter UART Command:" />
                    <Entry
                        x:Name="entry"
                        HorizontalOptions="FillAndExpand"
                        IsSpellCheckEnabled="False"
                        Placeholder="UART Command"
                        PlaceholderColor="LightGray"
                        Text="" />
                </StackLayout>
                <Button
                    Command="{Binding UARTCommand}"
                    CommandParameter="{Binding Source={x:Reference entry}, Path=Text}"
                    HorizontalOptions="Center"
                    Text="SEND" />
            </StackLayout>
            <StackLayout>
                <ListView
                    x:Name="listView"
                    ItemsSource="{Binding BTDataRcvd}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>